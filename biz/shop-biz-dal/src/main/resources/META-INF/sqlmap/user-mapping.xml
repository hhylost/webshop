<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap
		PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
		"http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap namespace="user">
	<typeAlias alias="user" type="com.hhy.shop.biz.dal.user.dataobject.UserDO" />

	<insert id="insertUser" parameterClass="user">
		<![CDATA[
           insert into tb_user values (#id#,#username#,#password#)
       ]]>
	</insert>

	<delete id="deleteById" parameterClass="Long">
		<![CDATA[
           delete from tb_user where id=#id#
        ]]>
	</delete>

	<update id="updateUser" parameterClass="user">
		<![CDATA[
               update tb_user set username=#username#,password=#password# where id=#id#
         ]]>
	</update>

	<select id="queryById" parameterClass="Long" resultClass="user">
		<![CDATA[
              select * from tb_user where id=#id#
         ]]>
	</select>

	<select id="queryAllUser" cacheModel="personCache" resultClass="user">
		<![CDATA[
               select * from tb_user
         ]]>
	</select>
</sqlMap>